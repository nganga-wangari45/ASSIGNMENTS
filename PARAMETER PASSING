#include <stdio.h>

void passByValue(int a);
void passByReference(int *a);
void passByArray(int arr[], int size);

int main() {
    int num = 10;
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);

    printf("Original value of num: %d\n", num);
    passByValue(num);
    printf("Value of num after passByValue: %d\n", num);

    printf("\nOriginal value of num: %d\n", num);
    passByReference(&num);
    printf("Value of num after passByReference: %d\n", num);

    printf("\nOriginal array: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    passByArray(arr, size);
    printf("Array after passByArray: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}

void passByValue(int a) {
    a = 20;
    printf("Inside passByValue: %d\n", a);
}

void passByReference(int *a) {
    *a = 30;
    printf("Inside passByReference: %d\n", *a);
}

void passByArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        arr[i] *= 2;
    }
    printf("Inside passByArray: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}
